@model InventoryManagementSystem.Dto.LoginUserDto;
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="page-inner">
        <div
            class="authentication-wrapper authentication-basic container-p-y d-flex align-items-center justify-content-center min-vh-100">
            <div class="authentication-inner w-100" style="max-width: 420px">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-body p-5">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center mb-4">
                            <a href="/" class="app-brand-link gap-2 text-decoration-none">
                                <span class="app-brand-logo demo"><img src="~/Templates/img/Logo/logo.png"
                                        alt="navbar brand" class="navbar-brand" height="50" /></span>
                                </br>
                                </br>
                                <span class="app-brand-text demo text-primary fw-bold fs-4">Inventory Management
                                    System</span>
                            </a>
                        </div>

                        <p class="mb-4 text-center text-muted">Sign in to continue managing inventory</p>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                                {
                                    <p class="mb-0">@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        <form asp-action="Login" asp-controller="Auth" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">Email or Username</label>
                                <input asp-for="Email" type="text" class="form-control form-control-lg"
                                    placeholder="you@example.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">Password</label>
                                <div class="input-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg"
                                        placeholder="••••••••" required />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-4 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="remember-me">
                                    <label class="form-check-label" for="remember-me"> Remember Me </label>
                                </div>
                                <a href="/Auth/ForgotPasswordBasic" class="text-decoration-none">Forgot Password?</a>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Login</button>
                            </div>
                        </form>

                        <hr class="my-4">

                        <p class="text-center mb-0">
                            New on our platform?
                            <a href="/Auth/Register" class="fw-semibold">Create an account</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
