@model InventoryManagementSystem.ViewModels.UserVm;
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <p>Login Page</p>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState[string.Empty].Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
    <div>
        <form method="post" asp-action="Register" asp-controller="Auth" class="card">
            <div class="card-body">
                <div class="card-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="card-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="card-group">
                    <label asp-for="DOB"></label>
                    <input asp-for="DOB" type="date" class="form-control" required />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>

                <div class="card-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="card-group">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="card-group">
                    <label asp-for="Role"></label>
                    <select asp-for="Role" class="form-control">
                        <option value="">-- Select Role --</option>
                        <option value="Administrator">Administrator</option>
                        <option value="User">Normal User</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="card-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</body>

</html>
