@model InventoryManagementSystem.ViewModels.UserVm
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid px-4">
    <h4 class="mt-4 mb-3">Create a New Account 🚀</h4>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }

                    <form method="post" asp-action="Register" asp-controller="Auth">
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" required />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DOB" class="form-label"></label>
                            <input asp-for="DOB" type="date" class="form-control" required />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-control">
                                <option value="">-- Select Role --</option>
                                <option value="Administrator">Administrator</option>
                                <option value="User">Normal User</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-password-toggle">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>

                    <p class="text-center mt-3">
                        Already have an account?
                        <a href="/Auth/Login">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
